{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Build",
            "args": [
                "build"
            ],
            "type": "shell",
            "command": "./build/Build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "windows": {
                "options": {
                    "shell": {
                        "executable": "C://Windows//System32//wsl.exe"
                    },
                    "env": {
                        "WSLENV": "win"
                    }
                }
            }
        },
        {
            "label": "Clean Build",
            "args": [
                "clean"
            ],
            "command": "./build/Build.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "windows": {
                "options": {
                    "shell": {
                        "executable": "C://Windows//System32//wsl.exe"
                    },
                    "env": {
                        "WSLENV": "win"
                    }
                }
            }
        }
    ]
}